<Page x:Class="DogShowProgram.Pages.DogAndOther_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogShowProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_Page">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="dog_but"
                Style="{DynamicResource Rounded}" Content="Собаки"/>
            <Button x:Name="dogPassport_but"
                Style="{DynamicResource Rounded}" Click="dogPassport_but_Click">
                <TextBlock TextAlignment="Center">
                    Паспорта<LineBreak/>
                    Собак
                </TextBlock>
            </Button>
            <Button x:Name="dogOwner_but" Width="180"
                Style="{DynamicResource Rounded}" Click="dogOwner_but_Click">
                <TextBlock TextAlignment="Center">
                    Владельци<LineBreak/>
                    Собак
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
