<Page x:Class="DogShowProgram.Pages.Main_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogShowProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_Page">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="club_but"
                Style="{DynamicResource Rounded}" Content="Клубы" Click="club_but_Click"/>
            <Button x:Name="dogAndOther_but"
                Style="{DynamicResource Rounded}" Width="220" Click="dogAndOther_but_Click">
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                    Собаки и <LineBreak/>
                    их владельци
                </TextBlock>
            </Button>
            <Button x:Name="expert_but"
                Style="{DynamicResource Rounded}" Content="Эксперты" Click="expert_but_Click"/>
        </StackPanel>
    </Grid>
</Page>
